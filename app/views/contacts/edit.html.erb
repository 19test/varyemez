<div class="container_12">      
	<%= render "shared/menu" %>
	<% if @contact.errors.any? %>
	<div class="grid_120 error-box">
		<h4>Murat güzel<%= notice %></h4>
		<p>
			<ul>
				<% @contact.errors.full_messages.each do |error| %>
					<li><%= error %></li>
				<% end %>
			</ul
		 <p>
	</div>
	<% end %>  
	<div class="with-table">
		<div id="stylized" class="myform" style="width:400px;height:430px;overflow:auto;">     
			<%= form_for @contact do |f| %>
				<h1>Güncelle</h1>
				<p>Formu doldurarak <%= @contact.name %> adlı kişinin bilgilerini güncelleyebilirsiniz.</p>

				<label>Adı<span class="small">Kişinin adını giriniz</span></label>        			 
				<%= f.text_field :first_name %>

				<label>Soyadı<span class="small">Kişinin soyadını giriniz</span></label>        			 
				<%= f.text_field :last_name %>

				<label>E-Mail</label>        			 
				<%= f.text_field :email %>

				<label>Telefon</label>        			 
				<%= f.text_field :phone %>

				<label>Risk Limiti<span class="small">Bu kişi için risk limiti (TL)</span></label>        			 
				<%= f.text_field :limit %>

				<label>Cinsiyet</label>        			 
				<%= f.select :sex, ["Bayan", "Bay"] %>  

				<br /><br />

				<%= f.submit "Güncelle", :disable_with => 'Güncelleniyor...', :class => "button" %>
				<div class="spacer"></div>

			<% end %>	
		</div>       
	</div>
</div>         

</div>